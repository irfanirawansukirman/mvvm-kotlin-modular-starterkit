<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="id.pamoyanan_dev.f_catlist.CatListVM" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_catlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:orientationList="@{safeUnbox(viewModel.verticalList)}"
            app:recyclerviewData="@{viewModel.movieList}" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.eventShowProgress ? View.VISIBLE : View.GONE}" />
    </FrameLayout>
</layout>