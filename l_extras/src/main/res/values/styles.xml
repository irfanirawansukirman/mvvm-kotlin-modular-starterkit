<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ViewDefault">
        <item name="android:background">@color/greyView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
    </style>

    <style name="ViewHeight" parent="ViewDefault">
        <item name="android:background">@color/greyView</item>
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ViewWidth8dp" parent="ViewDefault">
        <item name="android:background">@color/greyTextPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_8dp</item>
    </style>
</resources>