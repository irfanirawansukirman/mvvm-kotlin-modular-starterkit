<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        app:cardCornerRadius="@dimen/dimens_16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dimens_4dp"
                android:padding="@dimen/dimens_16dp"
                android:textColor="@android:color/black"
                android:text="Nyalakan Layanan Lokasi untuk Mengizinkan “GPS” Menentukan Lokasi Anda"
                android:textSize="@dimen/size_18sp"/>

        <View style="@style/ViewDefault"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/txt_locationConfig_dismiss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/dimens_16dp"
                    android:text="Batalkan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_18sp"/>

            <View style="@style/ViewHeight"/>

            <TextView
                    android:id="@+id/txt_locationConfig_setting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="@dimen/dimens_16dp"
                    android:text="Pengaturan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_18sp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
